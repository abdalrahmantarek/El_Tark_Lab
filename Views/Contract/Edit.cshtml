@model VendorContract
@{
	ViewData["Title"] = "Edit";
	Layout = null;
}





<form class="form fv-plugins-bootstrap5 fv-plugins-framework" method="post" asp-controller="Contract" asp-action="Edit" id="kt_modal_add_customer_form" data-kt-redirect="../../demo1/dist/apps/customers/list.html">

	<!--begin::hidden info-->
	<input type="hidden" class="form-control form-control-solid" placeholder="" name="VendorId" value="@Model.VendorId">
	<input type="hidden" asp-for="LastUpdateBy">
	<input type="hidden" asp-for="LastUpdateDate" >
	<input type="hidden" asp-for="LastUpdateFrom">
	<!--end::hidden info-->
	
	
		<div class="scroll-y me-n7 pe-7" id="kt_modal_add_customer_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_customer_header" data-kt-scroll-wrappers="#kt_modal_add_customer_scroll" data-kt-scroll-offset="300px" style="max-height: 490px;">
			<!--begin::Input group-->
			<div class="fv-row mb-7 fv-plugins-icon-container">
				<!--begin::Label-->
				<label class="required fs-6 fw-semibold mb-2">Contract Name</label>
				<!--end::Label-->
				<!--begin::Input-->
				<input asp-for="ContractName" class="form-control form-control-solid" placeholder="">
				<!--end::Input-->
				<div class="fv-plugins-message-container invalid-feedback"></div>
			</div>
			<!--end::Input group-->
			<!--begin::Input group-->
			<div class="fv-row mb-7 fv-plugins-icon-container">
				<!--begin::Label-->
				<label class="required fs-6 fw-semibold mb-2">StartDate</label>
				<!--end::Label-->
				<!--begin::Input-->
				<input type="date" class="form-control form-control-solid" placeholder="" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")">
				<!--end::Input-->
				<div class="fv-plugins-message-container invalid-feedback"></div>
			</div>
			<!--end::Input group-->
			<!--begin::Input group-->
			<div class="fv-row mb-15">
				<!--begin::Label-->
				<label class="fs-6 fw-semibold mb-2">End Date</label>
				<!--end::Label-->
				<!--begin::Input-->
				<input type="date" class="form-control form-control-solid" placeholder="" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))">


				<!--end::Input-->
			</div>
			<!--end::Input group-->
			<!--begin::Billing toggle-->
			<div class="fw-bold fs-3 rotate collapsible mb-7" data-bs-toggle="collapse" href="#kt_modal_add_customer_billing_info" role="button" aria-expanded="false" aria-controls="kt_customer_view_details">
				Contract Information
				<span class="ms-2 rotate-180">
					<!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
					<span class="svg-icon svg-icon-3">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor"></path>
						</svg>
					</span>
					<!--end::Svg Icon-->
				</span>
			</div>
			<!--end::Billing toggle-->
			<!--begin::Billing form-->
			<div id="kt_modal_add_customer_billing_info" class="collapse show">
				<!--begin::Input group-->
				<div class="d-flex flex-column mb-7 fv-row fv-plugins-icon-container">
					<!--begin::Label-->
					<label class="required fs-6 fw-semibold mb-2">ExcutedBy</label>
					<!--end::Label-->
					<!--begin::Input-->
					<input type="text" class="form-control form-control-solid" placeholder="" name="ExcutedBy" value="@Model.ExcutedBy">
					<!--end::Input-->
					<div class="fv-plugins-message-container invalid-feedback"></div>
				</div>
				<!--end::Input group-->
				<!--begin::Input group-->
				<div class="d-flex flex-column mb-7 fv-row">
					<!--begin::Label-->
					<label class="fs-6 fw-semibold mb-2">ContractType</label>
					<!--end::Label-->
					<!--begin::Input-->
					<input type="number" class="form-control form-control-solid" placeholder="" name="ContractType" value="@Model.ContractType">
					<!--end::Input-->
				</div>
				<!--end::Input group-->
				<!--begin::Input group-->
				<div class="d-flex flex-column mb-7 fv-row fv-plugins-icon-container">
					<!--begin::Label-->
					<label class="required fs-6 fw-semibold mb-2">ContractValue</label>
					<!--end::Label-->
					<!--begin::Input-->
					@* <input type="number" class="form-control form-control-solid" placeholder="" name="ContractValue" value="@Model.ContractValue"> *@
					<input type="number" class="form-control form-control-solid" placeholder="" name="ContractValue" value="@Model.ContractValue">
					<!--end::Input-->
					<div class="fv-plugins-message-container invalid-feedback"></div>
				</div>
				<!--end::Input group-->
				<!--begin::Input group-->
				<div class="row g-9 mb-7">
					<!--begin::Col-->
					<div class="col-md-6 fv-row fv-plugins-icon-container">
						<!--begin::Label-->
						<label class="required fs-6 fw-semibold mb-2">IncreasePer</label>
						<!--end::Label-->
						<!--begin::Input-->
						<input type="text" class="form-control form-control-solid" placeholder="" name="IncreasePer" value="@Model.IncreasePer">
						<!--end::Input-->
						<div class="fv-plugins-message-container invalid-feedback"></div>
					</div>
					<!--end::Col-->
				</div>
				<!--end::Input group-->
			</div>
			<!--end::Billing form-->
		</div>
		<!--end::Scroll-->
	
	<!--end::Modal body-->
	<!--begin::Modal footer-->
	<div class="modal-footer flex-center">
		<!--begin::Button-->
		<button type="reset" id="kt_modal_add_customer_cancel" class="btn btn-light me-3">Discard</button>
		<!--end::Button-->
		<!--begin::Button-->
		<button type="submit" id="kt_modal_add_customer_submit" class="btn btn-primary">
			<span class="indicator-label">Submit</span>
			<span class="indicator-progress">
				Please wait...
				<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
			</span>
		</button>
		<!--end::Button-->
	</div>
	<!--end::Modal footer-->
</form>

