
@{
    ViewData["Title"] = "Edit";
}

@using LAB.ViewModel;
@model VendorViewModel
@{
	//SelectList catItems = new SelectList(ViewBag.cat,"CatId", "CatName",Model.VendorCat);

}


	<!--begin::Contacts-->
	<div class="card w-75 m-auto h-lg-100 mt-10" id="kt_contacts_main">
		<!--begin::Card header-->
		<div class="card-header pt-7" id="kt_chat_contacts_header">
			<!--begin::Card title-->
			<div class="card-title">
				<!--begin::Svg Icon | path: icons/duotune/communication/com005.svg-->
				<span class="svg-icon svg-icon-1 me-2">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M20 14H18V10H20C20.6 10 21 10.4 21 11V13C21 13.6 20.6 14 20 14ZM21 19V17C21 16.4 20.6 16 20 16H18V20H20C20.6 20 21 19.6 21 19ZM21 7V5C21 4.4 20.6 4 20 4H18V8H20C20.6 8 21 7.6 21 7Z" fill="currentColor"></path>
						<path opacity="0.3" d="M17 22H3C2.4 22 2 21.6 2 21V3C2 2.4 2.4 2 3 2H17C17.6 2 18 2.4 18 3V21C18 21.6 17.6 22 17 22ZM10 7C8.9 7 8 7.9 8 9C8 10.1 8.9 11 10 11C11.1 11 12 10.1 12 9C12 7.9 11.1 7 10 7ZM13.3 16C14 16 14.5 15.3 14.3 14.7C13.7 13.2 12 12 10.1 12C8.10001 12 6.49999 13.1 5.89999 14.7C5.59999 15.3 6.19999 16 7.39999 16H13.3Z" fill="currentColor"></path>
					</svg>
				</span>
				<!--end::Svg Icon-->
				<h2>Edit Vendor</h2>
			</div>
			<!--end::Card title-->
		</div>
		<!--end::Card header-->
		<!--begin::Card body-->
		<div class="card-body pt-5">
			<!--begin::Form-->
			<form id="kt_ecommerce_settings_general_form" class="form fv-plugins-bootstrap5 fv-plugins-framework" method="post" asp-action="Edit">

				@*ID*@
				<div class="col">
					<!--begin::Input group-->
					<div class="fv-row mb-7">
						<!--begin::Input-->
						<input asp-for="VendorId" class="form-control form-control-solid" hidden />
						<!--end::Input-->
					</div>
					<!--end::Input group-->
				</div>
				<!--end::Col-->




				<!--begin::Input group-->
			<div class="row"> 
				<div class="fv-row mb-7 fv-plugins-icon-container col-6">
					<!--begin::Label-->
					<label class="fs-6 fw-semibold form-label mt-3">
						<span class="required">Name</span>
						<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" aria-label="Enter the contact's name." data-bs-original-title="Enter the contact's name." data-kt-initialized="1"></i>
					</label>
					<!--end::Label-->
					<!--begin::Input-->
					<input class="form-control form-control-solid" asp-for="VendorName">
					<span class="text-danger" asp-validation-for="VendorName"></span>


					<!--end::Input-->
					<div class="fv-plugins-message-container invalid-feedback"></div>
				</div>
				<!--end::Input group-->
				<!--begin::Input group-->
				<div class="fv-row mb-7 col-6">
					<!--begin::Label-->
					<label class="fs-6 fw-semibold form-label mt-3">
						<span>Address</span>
						<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" aria-label="Enter the contact's company name (optional)." data-bs-original-title="Enter the contact's company name (optional)." data-kt-initialized="1"></i>
					</label>
					<!--end::Label-->
					<!--begin::Input-->
					<input class="form-control form-control-solid" asp-for="VendorAddress">
					<span class="text-danger" asp-validation-for="VendorAddress"></span>

					<!--end::Input-->
				</div>
			</div>
				<!--end::Input group-->
				<!--begin::Row-->
				<div class="row row-cols-1 row-cols-sm-2 rol-cols-md-1 row-cols-lg-2">
					<!--begin::Col-->
					<div class="col">
						<!--begin::Input group-->
						<div class="fv-row mb-7 fv-plugins-icon-container">
							<!--begin::Label-->
							<label class="fs-6 fw-semibold form-label mt-3">
								<span>OfficialEmail</span>
								<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" aria-label="Enter the contact's email." data-bs-original-title="Enter the contact's email." data-kt-initialized="1"></i>
							</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="email" class="form-control form-control-solid" asp-for="OfficialEmail">
							<span class="text-danger" asp-validation-for="OfficialEmail"></span>

							<!--end::Input-->
							<div class="fv-plugins-message-container invalid-feedback"></div>
						</div>
						<!--end::Input group-->
					</div>
					<!--end::Col-->
					<!--begin::Col-->
					<div class="col">
						<!--begin::Input group-->
						<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="fs-6 fw-semibold form-label mt-3">
								<span>Website</span>
								<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" aria-label="Enter the contact's phone number (optional)." data-bs-original-title="Enter the contact's phone number (optional)." data-kt-initialized="1"></i>
							</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input asp-for="VendorWebsite" class="form-control form-control-solid " />
							<span class="text-danger" asp-validation-for="VendorWebsite"></span>
							<!--end::Input-->
						</div>
						<!--end::Input group-->
					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
				<!--begin::Row-->
				<div class="row row-cols-1 row-cols-sm-2 rol-cols-md-1 row-cols-lg-2">
					<!--begin::Col-->
					<div class="col">
						<!--begin::Input group-->
						<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="fs-6 fw-semibold form-label mt-3">
								<span asp-validation-for="VendorTel">Phone 2</span>
								<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" aria-label="Enter the contact's phone number (optional)." data-bs-original-title="Enter the contact's phone number (optional)." data-kt-initialized="1"></i>
							</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input asp-for="VendorTel" class="form-control form-control-solid " />
							<span class="text-danger" asp-validation-for="VendorTel"></span>

							<!--end::Input-->
						</div>
						<!--end::Input group-->

					</div>
					<!--end::Col-->
					<!--begin::Col-->
					<div class="col">

						<!--begin::Input group-->
						<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="fs-6 fw-semibold form-label mt-3">
								<span>Phone</span>
								<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" aria-label="Enter the contact's phone number (optional)." data-bs-original-title="Enter the contact's phone number (optional)." data-kt-initialized="1"></i>
							</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input asp-for="VendorTel2" class="form-control form-control-solid " />
							<span class="text-danger" asp-validation-for="VendorTel2"></span>
							<!--end::Input-->
						</div>
						<!--end::Input group-->
					</div>
					<!--end::Col-->
					<!--begin::Col-->
					<div class="col">
						<!--begin::Input group-->
						<div class="fv-row mb-7 fv-plugins-icon-container">
							<!--begin::Label-->
							<label class="fs-6 fw-semibold form-label mt-3">
								<span class="required">Vendor Category</span>
							</label>
							<!--end::Label-->
							<div class="w-100">
								<!--begin::Select2-->
								<select data-control="select2" data-placeholder="Select a Department" id="SelectedColumns" asp-for="VendorCat" class="form-control">
									<option value=""></option>
									@foreach (var item in Model.VendorCategories)
									{
										if (item.CatId == Model.VendorCat)
										{
											<option selected value="@item.CatId">@item.CatName</option>
										}
										else
										{
											<option value="@item.CatId">@item.CatName</option>

										}
									}
								</select>
								<span class=" text-danger" asp-validation-for="VendorCat"></span>
								<!--end::Select2-->
							</div>
							<div class="fv-plugins-message-container invalid-feedback"></div>
						</div>
						<!--end::Input group-->
					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
				<!--begin::Separator-->
				<div class="separator mb-6"></div>
				<!--end::Separator-->
				<!--begin::Action buttons-->
				<div class="d-flex justify-content-end">
					<!--begin::Button-->
					<a asp-action="index" asp-controller="vendor" class="btn btn-lg btn-light-primary me-3" data-kt-stepper-action="previous">
						<!--begin::Svg Icon | path: icons/duotune/arrows/arr063.svg-->
						<span class="svg-icon svg-icon-3 me-1">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<rect opacity="0.5" x="6" y="11" width="13" height="2" rx="1" fill="currentColor" />
								<path d="M8.56569 11.4343L12.75 7.25C13.1642 6.83579 13.1642 6.16421 12.75 5.75C12.3358 5.33579 11.6642 5.33579 11.25 5.75L5.70711 11.2929C5.31658 11.6834 5.31658 12.3166 5.70711 12.7071L11.25 18.25C11.6642 18.6642 12.3358 18.6642 12.75 18.25C13.1642 17.8358 13.1642 17.1642 12.75 16.75L8.56569 12.5657C8.25327 12.2533 8.25327 11.7467 8.56569 11.4343Z" fill="currentColor" />
							</svg>
						</span>
						<!--end::Svg Icon-->Back
					</a>
					<!--end::Button-->
					<!--begin::Button-->
					<button type="submit" asp-action="Edit" class="btn btn-primary">submit</button>

					<span class="indicator-progress">
						Please wait...
						<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
					</span>

					<!--end::Button-->
				</div>
				<!--end::Action buttons-->
			</form>
			<!--end::Form-->
		</div>
		<!--end::Card body-->
	</div>
	<!--end::Contacts-->



	<script>

		$('#SelectedColumns').select2();

	</script>

