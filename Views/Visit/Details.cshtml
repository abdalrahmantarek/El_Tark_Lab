@using LAB.ViewModel;
@model VisitDetailsViewModel










<!--begin::Content-->
<div class="card flex-lg-row-fluid me-xl-18 mb-10 mb-xl-0 w-75 my-10 mx-20 p-10">
	<!--begin::Invoice 2 content-->
	<div class="mt-n1">
		<!--begin::Top-->
		<div class="d-flex flex-stack pb-10">
			
			<!-- begin::logo-->
			<div>
				<img src="~/Invoicelogo.png" width="150px" />
			</div>
			<!--end::Logo-->
			
		</div>
		<!--end::Top-->
		<!--begin::Wrapper-->
		<div class="m-0">
			<!--begin::Label-->
			<div class="fw-bold fs-3 text-gray-800 mb-8">@Model.Visit.Patient?.PatientName</div>
			<!--end::Label-->
			<!--begin::Row-->
			<div class="row g-5 mb-11">
				<!--end::Col-->
				<div class="col-sm-6">
					<!--end::Label-->
					<div class="fw-semibold fs-7 text-gray-600 mb-1">Visit Start Date:</div>
					<!--end::Label-->
					<!--end::Col-->
					<div class="fw-bold fs-6 text-gray-800">@Model.Visit.VisitStartDate</div>
					<!--end::Col-->
				</div>
			</div>
			<!--end::Row-->
			<!--begin::Card body-->
			<div class="card-body pt-0">
				<form asp-action="LogStatus" asp-controller="Visit">

					<input hidden name="visitId" value="@Model.Visit.VisitId" />

				<!--begin::Table-->
				<table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
					<!--begin::Table head-->
					<thead>
						<!--begin::Table row-->
						<tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
							<th class="min-w-125px">Service Name</th>	
							<th class="w-10px pe-2">
									<label>Collected:</label>
								<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
									<input class="form-check-input " type="checkbox" data-kt-check="true" data-kt-check-target="#kt_customers_table .Collected" value="1" />
								</div>
							</th>
							<th class="w-10px pe-2">
								<label>Analisis:</label>
								<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
								</div>
							</th>
							<th class="w-10px pe-2">
								<label>Completed:</label>
								<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
								</div>
							</th>
							<th class="text-end min-w-70px">Actions</th>
						</tr>
						<!--end::Table row-->
					</thead>
					<!--end::Table head-->
					<!--begin::Table body-->

					<tbody class="fw-semibold text-gray-600">
							@for (int i=0; i< Model.Visit.ServiceBarcodes.Count ; i++)
							{
						<tr>
							<!--begin::Name=-->
							<td>
										
										<a href="#" class="text-gray-800 text-hover-primary mb-1">@Model.Visit.ServiceBarcodes.ElementAt(i).Services.ServiceName</a>
							</td>
							<!--end::Name=-->
							<!--begin::Checkbox-->
									@if (Model.Visit.ServiceBarcodes.ElementAt(i).SampleStatus == 3)
									{
								<td>
									<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Collected" checked disabled name="isCollected" type="checkbox" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
									</div>
								</td>
								<!--end::Checkbox-->
								<!--begin::Checkbox-->
								<td>
									<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Analisis" checked disabled type="checkbox" name="isAnalisis" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
									</div>
								</td>
								<!--end::Checkbox-->
								<!--begin::Checkbox-->
								<td>
									<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Completed" checked disabled type="checkbox" name="isCompleted" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
									</div>
								</td>

								}
									else if (Model.Visit.ServiceBarcodes.ElementAt(i).SampleStatus == 2)
								{
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Collected" name="isCollected" checked disabled type="checkbox" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
									<!--end::Checkbox-->
									<!--begin::Checkbox-->
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Analisis" checked disabled type="checkbox" name="isAnalisis" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
									<!--end::Checkbox-->
									<!--begin::Checkbox-->
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Completed" name="isCompleted" type="checkbox" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
								}
									else if (Model.Visit.ServiceBarcodes.ElementAt(i).SampleStatus == 1)
								{
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Collected" checked disabled name="isCollected" type="checkbox" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
									<!--end::Checkbox-->
									<!--begin::Checkbox-->
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Analisis"  type="checkbox" name="isAnalisis" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
									<!--end::Checkbox-->
									<!--begin::Checkbox-->
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Completed" disabled type="checkbox" name="isCompleted" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
								}
									else
								{
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Collected" name="isCollected" type="checkbox" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
									<!--end::Checkbox-->
									<!--begin::Checkbox-->
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Analisis" name="isAnalisis" disabled type="checkbox" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
									<!--end::Checkbox-->
									<!--begin::Checkbox-->
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
												<input class="form-check-input Completed" name="isCompleted" disabled type="checkbox" value="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" />
										</div>
									</td>
								}

							<!--end::Checkbox-->

							@{
								string hide = Model.Visit.ServiceBarcodes.ElementAt(i).SampleStatus != 3 ? "d-none" : "";
							}
						
						<!--begin::Action=-->
							<td class="text-end @hide">
								<a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
									Actions
									<!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
									<span class="svg-icon svg-icon-5 m-0">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor" />
										</svg>
									</span>
									<!--end::Svg Icon-->
								</a>
								<!--begin::Menu-->
								<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
									<!--begin::Menu item-->
									<div class="menu-item px-3">

										<a asp-action="Generate" asp-controller="Report" asp-route-id="@Model.Visit.ServiceBarcodes.ElementAt(i).BarcodeId" class="menu-link px-3">Report</a>
									</div>
									<!--end::Menu item-->
					
								</div>
								<!--end::Menu-->
							</td>
							<!--end::Action=-->
						
						
						</tr>
						
						}
					</tbody>
					<!--end::Table body-->
				</table>
						<button type="submit" class="btn btn-primary">
							Save
						</button>
				<!--end::Table-->
					</form>
			</div>
			<!--end::Card body-->
		</div>
		<!--end::Wrapper-->
	</div>
	<!--end::Invoice 2 content-->
</div>
<!--end::Content-->



