	
@model RefferedDoctor
@{
	ViewData["Title"] = "Edit";
}
<div asp-validation-summary="All"></div>

<div class="container-md bg-white" style="height:90vh;">
	<form class="form fv-plugins-bootstrap5 fv-plugins-framework" asp-controller="RefferedDoctor" method="post" asp-action="Edit"  id="kt_modal_add_customer_form" data-kt-redirect="../../demo1/dist/apps/customers/list.html">
		<!--begin::Modal header-->
		<div class="modal-header mt-5" id="kt_modal_add_customer_header">
			<input type="hidden" asp-for="DrId" />
			<!--begin::Modal title-->
			<h2 class="fw-bold fs-1 p-5 text-info">Reffered Doctor</h2>
			<!--end::Modal title-->
			<!--begin::Close-->
			<div id="kt_modal_add_customer_close" class="btn btn-icon btn-sm btn-active-icon-primary">
				<!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
				<span class="svg-icon svg-icon-1">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor"></rect>
						<rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor"></rect>
					</svg>
				</span>
				<!--end::Svg Icon-->
			</div>
			<!--end::Close-->
		</div>
		<!--end::Modal header-->


				<!--begin::Modal body-->
				<div class="modal-body py-10 px-lg-17">
					<!--begin::Scroll-->
					<div class="scroll-y me-n7 pe-7" id="kt_modal_add_customer_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_customer_header" data-kt-scroll-wrappers="#kt_modal_add_customer_scroll" data-kt-scroll-offset="300px">
						<!--begin::Input group-->
						<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="required fs-6 fw-semibold mb-2">Doctor Name</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" placeholder="Enter Doctor Name" name="DoctorName" value="@Model.DoctorName" />
							<!--end::Input-->
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="required fs-6 fw-semibold mb-2">DoctorSpecialization</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" placeholder="Enter DoctorSpecialization" name="DoctorSpecialization" value="@Model.DoctorSpecialization" />
							<!--end::Input-->
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->

						<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="required fs-6 fw-semibold mb-2">PhoneNumber</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" placeholder="Enter PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
							<!--end::Input-->
						</div>

						<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="required fs-6 fw-semibold mb-2">ClinicAddress</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" placeholder="Enter ClinicAddress" name="ClinicAddress" value="@Model.ClinicAddress" />
							<!--end::Input-->
						</div>
						<!--end::Input group-->
							<div class="fv-row mb-7">
							<!--begin::Label-->
							<label class="required fs-6 fw-semibold mb-2" asp-for="LastUpdateBy"></label>
							<!--end::Label-->
							<!--begin::Input-->
							<input  class="form-control form-control-solid" placeholder="Enter ClinicAddress"  asp-for="LastUpdateBy" />
							<!--end::Input-->
						</div>

				<div class="fv-row mb-7">
					<!--begin::Label-->
					<label class="required fs-6 fw-semibold mb-2" asp-for="LastUpdateFrom"></label>
					<!--end::Label-->
					<!--begin::Input-->
					<input  class="form-control form-control-solid" placeholder="Enter ClinicAddress"  asp-for="LastUpdateFrom" />
					<!--end::Input-->
				</div>
					</div>
					<!--end::Scroll-->
				</div>
				<!--end::Modal body-->
				<!--begin::Modal footer-->
				<div class="modal-footer flex-center">
					<!--begin::Button-->
					<!--begin::Button-->
			<a asp-action="Index" asp-controller="RefferedDoctor" class="btn btn-light me-3">Discard</a>
					<!--end::Button-->
					<!--end::Button-->
					<!--begin::Button-->
					<button type="submit" id="kt_modal_add_customer_submit" class="btn btn-primary">
						<span class="indicator-label">Submit</span>
						<span class="indicator-progress">
							Please wait...
							<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
						</span>
					</button>
					<!--end::Button-->
				</div>
				<!--end::Modal footer-->
		</form>
			<!--end::Form-->
		</div>

