							</thead>
							<!--end::Table head-->
							<!--begin::Table body-->
							<tbody class="fw-semibold text-gray-600">

								@foreach (Visit item in Model)
								{
									<tr class="odd hover-overlay">
										<!--begin::Name=-->
										<td>
											@item.Patient?.PatientName
										</td>
										<!--end::Name=-->
										<!--begin::Patient NID Type=-->
										<td>
											@item.RefererDoctorNavigation?.DoctorName
										</td>
										<!--end::Patient NID Type=-->
										<!--begin::Patient NID =-->
										<td>
											@item.DiscountCard
										</td>
										<!--end::Patient NID Type=-->
										<!--begin::Patient Address=-->
										<td>
											@item.VisitStatus
										</td>
										<!--end::Patient Email=-->
										<!--begin::Patient Email=-->
										<td>
											@item.VisitStartDate
										</td>
										<!--end::Patient Email=-->
										<!--begin::Patient Gender=-->
										<td>
											@item.VisitEndDate
										</td>
										<!--end::Patient Gender=-->
										<!--begin::Patient Gender=-->
										<td>
											@item.VisitType
										</td>
										@* href="/PatientInvoice/PatientInvoicePay/@item.VisitId" *@
										@* asp-action="PatientInvoice" asp-controller="PatientInvoicePay" asp-route-id="@item.VisitId" *@
										<td>
												@if (item.VisitStatus.ToLower() == "pending")
												{
												<a href="/PatientInvoice/PatientInvoicePay/@item.VisitId" class="btn btn-bg-light btn-active-color-primary btn-sm">Pay</a>

												}
												else if(item.VisitStatus.ToLower()=="active")
												{
													<a asp-action="Details" asp-controller="Visit" asp-route-id="@item.VisitId" class="btn btn-bg-light btn-active-color-primary btn-sm">Services</a>

												}

										</td>
@* 										<td>
											<a class="text-info fw-bold mb-3 badge badge-light-success" href="/patient/Edit/@item.PatientId">Edit</a>
											<a asp-action="Details" asp-controller="Visit" asp-route-id="@item.PatientId" class=" badge badge-light-success text-info fw-bold">Details</a>

										</td> *@
										<!--end::Patient Gender=-->
									</tr>

								}


