			var div = row.querySelector("#myDiv");

			if (invoiceStatus === 'Active' || invoiceStatus === 'A') {
				div.style.backgroundColor = 'blue';
			}
			else if (invoiceStatus === 'pending' || invoiceStatus === 'p') {
				div.style.backgroundColor = 'yellow';
			}

		else if (invoiceStatus === 'Cancel' || invoiceStatus === 'c') {
			div.style.backgroundColor = 'red';
		}

		});
	

</script>


